def versionTag = nill
pipeline {
    agent any

    stages {
        stage('Prepare') {
            steps {
                git branch: 'master', credentialsId: 'tmaxcloud-github', url: 'https://github.com/onemankim/Jenkins-test.git'
                script {
                    versionTag = sh(returnStdout: true, script: "git tag --contains").trim()
                }
            }
        }

        stage('Build') {
            when {
                expression {
                    return versionTag
                }                
            }
            steps {
                sh 'go build'
            }
            post {
                success {
                    sh 'mv ./jenkins_test build/package/'
                }
            }
        }

        stage('Build Image') {
            when {
                expression {
                    return versionTag
                }                
            }
            steps {
                echo 'lala'
            }
        }
    }
}