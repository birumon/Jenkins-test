def versionTag = null
pipeline {
    agent any
    
    environment {
        imageName = "tmaxcloudck/network-hook"
    }

    stages {
        stage('Prepare') {
            steps {
                script {
                    versionTag = sh(returnStdout: true, script: "git tag --contains").trim()
                }
            }
        }

        stage('Build') {
            when {
                allOf {
                    expression {
                        return versionTag
                    }
                }
            }
            steps {
                sh 'go build'
            }
            post {
                success {
                    sh 'mv ./jenkins_test build/package/'
                }
            }
        }

        stage('Build Image') {
            when {
                allOf {
                    expression {
                        return versionTag
                    }
                }
            }
            steps {
                dir("build/package"){
                    echo 'Building ${imageName}:${versionTag}'
                    script {
                        def dockerImage = docker.build("${imageName}:${versionTag}")
                        dockerImage.push()
                    }
                }
            }
        }
    }
}