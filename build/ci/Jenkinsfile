pipeline {
    agent any

    stages {
        stage('Build') {
            environment {
                PATH = "$PATH:/usr/local/go/bin"
                GOPATH = "/home/jenkins/workspace"
                GO111MODULE = 'on'
            }

            steps {
                sh 'pwd'
                sh 'go build'
            }
        }

        stage('Release') {
            steps {
                sh 'mv ./jenkins_test build/package/'
            }
        }
    }
}